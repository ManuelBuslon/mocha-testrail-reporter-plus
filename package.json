{
  "name": "mocha-testrail-reporter-plus",
  "version": "2.0.5",
  "description": "A Testrail reporter for mocha utilising TestRail API",
  "main": "index.js",
  "private": false,
  "keywords": [
    "mocha",
    "testrail",
    "reporter"
  ],
  "files": [
    "node_modules",
    "dist",
    "bin",
    "modules.js"
  ],
  "author": {
    "name": "Pierre Awaragi",
    "email": "pierre@awaragi.com"
  },
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/awaragi/mocha-testrail-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/awaragi/mocha-testrail-reporter/issues"
  },
  "bin": {
    "create-tags": "dist/create-tags.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "mocha dist/test",
    "test:ts": "mocha -r ts-node/register src/test/*",
    "format": "prettier --check ./**/* --write"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "btoa": "^1.1.2",
    "find-test-names-tags-mocha": "^1.0.2",
    "fs": "^0.0.1-security",
    "git-branch": "^2.0.1",
    "git-commit-info": "^2.0.1",
    "git-last-commit": "^1.0.1",
    "globby": "^11.1.0",
    "unirest": "^0.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^12.20.47",
    "chai": "^4.3.6",
    "mocha": "^10.2.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
